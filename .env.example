# Configuración de seguridad
SECRET_KEY=clave_secreta_segura_para_produccion
MAINTENANCE_TOKEN=token_seguro_para_tareas_mantenimiento

# Configuración de FastAPI
FASTAPI_ENV=development  # Cambiar a 'production' en producción
FASTAPI_APP=app.main:app
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8080

# Configuraciones de optimización de imágenes
# Compresión de imágenes (0-100, recomendado 85 para buen balance)
IMG_COMPRESSION_QUALITY=85

# Configuración para limpieza automática de uploads antiguos
AUTO_CLEANUP_ENABLED=TRUE
AUTO_CLEANUP_DAYS=30

# Optimizaciones para FastAPI
# Número de trabajadores (worker processes)
WORKERS=1