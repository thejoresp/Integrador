# Credenciales de AWS (reemplazar con tus propias credenciales)
AWS_ACCESS_KEY_ID=tu_access_key
AWS_SECRET_ACCESS_KEY=tu_secret_key
AWS_REGION=us-east-1
S3_BUCKET=tu_bucket_name

# Configuración de seguridad
SECRET_KEY=clave_secreta_segura_para_produccion
MAINTENANCE_TOKEN=token_seguro_para_tareas_mantenimiento

# Configuración de FastAPI
FASTAPI_ENV=development  # Cambiar a 'production' en producción
FASTAPI_APP=app.main:app
FASTAPI_HOST=0.0.0.0
FASTAPI_PORT=8000

# Optimizaciones para capa gratuita de AWS
# Compresión de imágenes (0-100, recomendado 85 para buen balance)
IMG_COMPRESSION_QUALITY=85

# Limpieza automática de S3 para mantener bajo el uso de almacenamiento
S3_AUTO_CLEANUP_ENABLED=TRUE
S3_AUTO_CLEANUP_DAYS=30

# Usar storage class de redundancia reducida para ahorrar costos
# https://aws.amazon.com/s3/storage-classes/
S3_REDUCED_REDUNDANCY=TRUE

# Modo de bajo consumo de recursos (procesa imágenes a menor resolución)
LOW_RESOURCE_MODE=TRUE

# Optimizaciones para FastAPI
# Número de trabajadores (worker processes)
WORKERS=1  # Para la capa gratuita, lo mejor es usar solo 1 worker

# Otras configuraciones
# DEBUG=FALSE  # Desactivar en producción 